<Window x:Class="SEI_Quick_Dim.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Tekla Drawing 快速标注工具" Height="450" Width="500" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Content="1. 快速标高标记" Margin="5" Padding="10" 
                Click="QuickLevelMarkButton_Click" FontSize="14"/>

        <Button Grid.Row="1" Content="2. 快速尺寸标注" Margin="5" Padding="10" 
                Click="QuickDimensionButton_Click" FontSize="14"/>

        <Button Grid.Row="2" Content="3. 批量钢筋标记" Margin="5" Padding="10" 
                Click="BatchRebarMarkButton_Click" FontSize="14"/>

        <Button Grid.Row="3" Content="4. 检查Tekla连接状态" Margin="5" Padding="10" 
                Click="CheckConnectionButton_Click" FontSize="14" Background="LightGreen"/>

        <TextBlock x:Name="StatusTextBlock" Grid.Row="4" Text="" 
                   HorizontalAlignment="Center" Margin="0,10,0,0" FontWeight="Bold"/>
                   
        <TextBlock Grid.Row="5" Text="Tekla 2024 Drawing 标注工具 v1.0" 
                   HorizontalAlignment="Center" Margin="0,10,0,0" Foreground="Gray"/>
    </Grid>
</Window>